<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00B2EE">

        <Button
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/back"/>

        <TextView
            android:id="@+id/note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/select_order"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#00000000"
                android:drawableLeft="@mipmap/down_arrow"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="      便签列表排序方式"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/simple_3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/select_order"
                android:background="#BEBEBE"/>

            <Button
                android:id="@+id/auto_update"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/simple_3"
                android:background="#00000000"
                android:drawableLeft="@mipmap/auto_update"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="      自动检查更新"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/simple_4"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/auto_update"
                android:background="#BEBEBE"/>

            <ImageView
                android:id="@+id/auto_update_switch"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/simple_3"
                android:layout_marginRight="15dp"/>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>